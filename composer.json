{
    "name": "soysaltan/laravel-plugin-system",
    "description": "A comprehensive Laravel plugin system with automatic registration of routes, controllers, services, views, and configs",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Soysal Tan",
            "email": "soysal@hotmail.it"
        }
    ],
    "keywords": [
        "laravel",
        "plugin",
        "plugin-system",
        "modular",
        "extensions",
        "package",
        "service-provider",
        "auto-registration",
        "routes",
        "controllers",
        "views",
        "config",
        "artisan",
        "command"
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/console": "^10.0|^11.0|^12.0",
        "illuminate/filesystem": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "SoysalTan\\LaravelPluginSystem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SoysalTan\\LaravelPluginSystem\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SoysalTan\\LaravelPluginSystem\\LaravelPluginSystemServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}